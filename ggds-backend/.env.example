# Application
APP_NAME="GGDS Benevolent Fund API"
APP_ENV="development"
DEBUG=True

# Database (PostgreSQL) - IMPORTANT: Use psycopg3 driver (+psycopg)
DATABASE_URL=postgresql+psycopg://user:password@localhost:5432/ggds_benevolent
# Production example: postgresql+psycopg://user:pass@db-postgresql-nyc3-xxxxx.ondigitalocean.com:25060/ggds_benevolent

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
# Production: https://ggds-benevolent.vercel.app

# Email Service (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxxx
EMAIL_FROM=noreply@ggds.org
ADMIN_EMAIL=admin@ggds.org

# AWS S3 (Placeholder - add keys later when ready)
AWS_ACCESS_KEY_ID=PLACEHOLDER_CHANGE_LATER
AWS_SECRET_ACCESS_KEY=PLACEHOLDER_CHANGE_LATER
AWS_REGION=us-east-1
S3_BUCKET_NAME=ggds-documents

# Optional
SENTRY_DSN=
LOG_LEVEL=INFO
